<Window x:Class="NFS_System.SetInterestScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SetInterestScreen" Height="214" Width="300" Closing="Window_Closing">
    <Grid>
        <Button Content="Enter" Height="23" HorizontalAlignment="Left" Margin="99,140,0,0" Name="Enter" VerticalAlignment="Top" Width="75" Click="Enter_Click" />
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="10,10,0,0" Name="InputBox_Text" Text="TextBlock" VerticalAlignment="Top" />
        <TextBlock Foreground="#FFE5572C" Height="23" HorizontalAlignment="Left" Margin="10,111,0,0" Name="errormessage" OpacityMask="Crimson" VerticalAlignment="Top" Width="247" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="117,81,0,0" Name="mortgage_text" VerticalAlignment="Top" Width="120" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="117,52,0,0" Name="savings_text" VerticalAlignment="Top" Width="120" />
        <Label Content="Savings Interest :" Height="28" HorizontalAlignment="Left" Margin="12,50,0,0" Name="savings_label" VerticalAlignment="Top" />
        <Label Content="Mortgage Interest : " Height="28" HorizontalAlignment="Left" Margin="-4,79,0,0" Name="mortgage_label" VerticalAlignment="Top" />
    </Grid>
</Window>
